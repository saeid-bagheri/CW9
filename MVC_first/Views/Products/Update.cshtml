@model Product

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"> 
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <form method="post">
        <div class="form-group row">
            <div class="col-12">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fa fa-shopping-cart"></i>
                        </div>
                    </div>
                    <label asp-for="Name"></label>
                    <input asp-for="Name" placeholder="Name" type="text" value="@Model.Name" class="form-control">
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fa fa-paint-brush"></i>
                        </div>
                    </div> 
                    <label asp-for="Color"></label>
                    <input asp-for="Color" placeholder="Color" type="color" value="@Model.Color" class="form-control">
                </div>
            </div>
        </div> 
        <div class="form-group row">
            <div class="col-8">
                <button type="submit" asp-controller="Products" asp-action="Update" class="btn btn-primary">Edit</button>
            </div>
        </div>
    </form>